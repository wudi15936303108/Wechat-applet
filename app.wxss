/**app.wxss**/
@import '/style/weui.wxss';

.container {
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	padding: 200rpx 0;
	box-sizing: border-box;
}

button {
	border: none;
	border-radius: 10rpx;
}

.banner swiper {
	width: 100%;
	height: 346rpx;

}

.banner image {
	width: 100%;
	height: 346rpx;
}

.goods_container .goods_wrap {
	width: 98%;
	margin: 0 auto;
	background: #fff;
}

.goods_container .goods_wrap .goods_list {
	display: -webkit-box;
	display: flex;
	justify-content: space-around;
	-webkit-box-align: center;
	align-items: center;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	flex-flow: row wrap;
	box-sizing: border-box;
}

.goods_item {
	width: 49%;
	padding: 8rpx 0;
}

.goods_avatar_container {
	position: relative;
}

.goods_avatar {
	width: 100%;
	height: 264rpx;
	border-radius: 10rpx;
}

.goods_main {
	margin-bottom: 20rpx;
}

.goods_header {
	padding: 8rpx 4rpx;
	display: -webkit-box;
	display: flex;
	-webkit-box-pack: justify;
	justify-content: space-between;
	-webkit-box-align: center;
	align-items: center;
	font-weight: 700;
}

.goods_header .goods_name {
	font-size: 32rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.goods_header .btn_qry {
	width: 110rpx;
	height: 44rpx;
	line-height: 44rpx;
	font-size: 26rpx;
	background: #ff0103;
	color: #fff;
}

.goods_info {
	display: -webkit-box;
	display: flex;
	-webkit-box-pack: start;
	justify-content: flex-start;
	-webkit-box-align: center;
	align-items: center;
	color: #666;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	flex-flow: row wrap;
}

.goods_info text {
	width: 49%;
	margin-top: 4rpx;
	font-size: 26rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.artist_info {
	display: -webkit-box;
	display: flex;
	-webkit-box-pack: justify;
	justify-content: space-between;
	-webkit-box-align: center;
	align-items: center;
}

.artist_info .artist_name {
	font-size: 30rpx;
	font-weight: 700;
	color: #181818;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
