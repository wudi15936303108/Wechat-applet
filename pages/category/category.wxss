/* pages/category.wxss */
.van-nav-bar {
	width: 100%;
	height: 92rpx;
	line-height: 92rpx;
	background: #362e2b;
	position: relative;
}

.van-nav-bar__left,
.van-nav-bar__right {
	position: absolute;
	bottom: 0;
	font-size: 28rpx;
}

.van-nav-bar__left {
	left: 32rpx;
}

.van-nav-bar__title {
	max-width: 60%;
	text-align: center;
	margin: 0 auto;
	color: #fff;
	font-weight: 500;
	font-size: 32rpx;
}

.van-ellipsis {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.van-nav-bar__right {
	right: 32rpx;
}

.van-nav-bar__text {
	width: 60rpx;
	display: inline-block;
	margin: 0 -32rpx;
	padding: 0 32rpx;
	color: #fff;
	vertical-align: middle;
}

.van-nav-bar__left .van-nav-bar__text {
    margin-left: -40rpx;
    padding-left: 60rpx;
}

.sort_container {
	width: 100%;
	height: 60rpx;
	color: #9b9b9b;
	font-size: 24rpx;
	background: #fff;
	border-bottom: 2rpx solid #eee;
	display: flex;
	-webkit-box-align: center;
	align-items: center;
	justify-content: space-around;
}

.sort_tab {
	width: 50%;
	text-align: center;
}

.sort_tab.active {
	color: #252525;
}
